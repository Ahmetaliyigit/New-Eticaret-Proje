@using E_Ticaret_Prjesi_AHMT
@model ProductandColor
@{
    int Toplam = 0;
}


<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner border">
                    <div class="carousel-item active">
                        <img class="w-100 h-100" src="~/img/@Model.Products.FirstOrDefault().Url" alt="Image">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7 pb-5">
            <h3 class="font-weight-semi-bold">@Model.Products.FirstOrDefault()?.Name</h3>
            <h3 class="font-weight-semi-bold mb-4">$@Model.Products.FirstOrDefault()?.Price</h3>
            <p class="mb-4">
                @Model.Products.FirstOrDefault()?.Description
                <div class="d-flex mb-3">
                    <p class="text-dark font-weight-medium mb-0 mr-3">Sizes:</p>
                    <form>
                        <div>
                            <label class="active" for="size-1">@Model.Products.FirstOrDefault()?.Size</label>
                        </div>
                    </form>
                </div>
                <div class="d-flex mb-4">
                    <p class="text-dark font-weight-medium mb-0 mr-3">Color:    </p>
                    <form>
                        <div>
                            <label class="active" for="color-1">@Model.Colors.FirstOrDefault()?.ColorName</label>
                        </div>
                    </form>
                </div>
                <div class="d-flex align-items-center mb-4 pt-2">

                        <div class="input-group quantity mr-3" style="width:130px">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-minus">-</button>
                            </div>

                            <input type="text" class="form-control bg-secondary text-center" id="Toplam" value="1" />

                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-plus">+</button>
                            </div>
                        </div>

                    @if (ViewBag.IsOnline != null)
                    {

                        <button class="btn btn-primary px-3" onclick="location.href='/Home/ShoppingCart/@Model.Products.FirstOrDefault()?.Id/'+document.getElementById('Toplam').value;">
                            Add To Cart
                        </button>


                        <script>
                            (function(){
                                var container = document.getElementById('quantity-@Model.Products.FirstOrDefault()?.Id');
                                var input = container.querySelector('input');
                                var plus = container.querySelector('.btn-plus');
                                var minus = container.querySelector('.btn-minus');

                                plus.onclick = function() {
                                    input.value = (parseInt(input.value || '1') + 1).toString();
                                };

                                minus.onclick = function() {
                                    input.value = Math.max(1, parseInt(input.value || '1') - 1).toString();
                                };
                            })();
                        </script>

                    }
                    else
                    {
                        <button class="btn btn-primary px-3" onclick="location.href='/Home/LoginRegister'">
                            <i class="fa fa-shopping-cart mr-1"></i> Add To Cart
                        </button>
                    }
                </div>
                <div class="d-flex pt-2">
                    <p class="text-dark font-weight-medium mb-0 mr-2">Share on:</p>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" target="_blank"  href="https://www.facebook.com/?locale=tr_TR">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="text-dark px-2" target="_blank" href="https://x.com/home?lang=tr">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="text-dark px-2" target="_blank"  href="https://tr.linkedin.com/">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="text-dark px-2" target="_blank" href="https://tr.pinterest.com/">
                            <i class="fab fa-pinterest"></i>
                        </a>
                    </div>
                </div>
        </div>
    </div>
</div> 